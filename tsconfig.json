{
  "compileOnSave": true,
  "compilerOptions": {
    // general
    "declaration": true,
    // TODO: enable when using project references later
    // "declarationMap": true,
    "isolatedModules": true,
    "lib": [
      "ESNext"
    ],
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "target": "ES2019",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node", // deprecated
    "paths": {},
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "lodash",
      "jest",
      "minimist"
    ],

    // linter checks / etc
    "noFallthroughCasesInSwitch": false, // default
    "noImplicitReturns": true,
    "noUnusedLocals": false, // default
    "noUnusedParameters": false,
    "allowUnusedLabels": false, // default
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  }
}
